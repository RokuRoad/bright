{
  "compilerOptions": {
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es6",
      "es2015"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "src"
  ]
}